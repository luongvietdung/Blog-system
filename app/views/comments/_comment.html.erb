<div class="media" id="comment_<%=comment.id%>">
    <a class="pull-left" href="<%= user_path(comment.user.id) %>">
        <%= gravatar_for comment.user %>
    </a>
    <div class="media-body">
        <h4 class="media-heading"><%= link_to comment.user.name, comment.user %>
            <small><%= time_ago_in_words comment.created_at %> ago</small>
            <% if current_user?(comment.user) %>
              <%= link_to "", comment, class:'glyphicon glyphicon-remove', method: "delete", data: {confirm: "Are you sure?"}, html: {alt: "Delete"}, remote: true %>
              <% end %>
        </h4>
    <%= comment.content %>
    </div>
</div>