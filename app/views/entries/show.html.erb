<div>
  <h2>
    <%= @entry.title %>
    <% if current_user?(@entry.user) %>
      <a href="<%= edit_entry_path %>" alt="Edit">
        <span class="glyphicon glyphicon-edit"></span>
      </a>
      <%= link_to "", @entry, method: "delete", data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove" %> 
    <% end %>
  </h2>
  <span class="timestamp">
    Posted by <%= link_to @entry.user.name, @entry.user %>, <%= time_ago_in_words @entry.created_at %> ago
  </span>
  <hr/>
  <p class="content">
    <%= @entry.body %>
  </p>
  <hr/>
  
  <%= render 'comments', comments: @comments %>
  
  <br/>
  <% if logged_in? %>
  <%= render 'comment_form' %>
  <% else %>
    <h3>Please <%= link_to "sign in", "/signin" %> to comment</h3>
  <% end %>
  
  

</div>