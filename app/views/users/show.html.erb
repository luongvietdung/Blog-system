<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        
      </h1>
      <span class="glyphicon glyphicon-envelope"></span> <%= @user.email %>
      <% if current_user?(@user) %>
      <br/>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'relationship_form' if logged_in? %> 
    <% if @user.entries.any? %>
    <h3>
    <% if current_user?(@user) %>
        My entries 
    <% else %>
        Entries
    <% end %>
      (<%= @user.entries.count %>)
    </h3>
    <ol class="microposts">
      <%= render @entries %>
    </ol>
    <%= will_paginate @entries %>
    <% end %>
  </div>
</div>